# Multi-Database MCP Server Configuration
# Copy this file to .env and configure your databases

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================
DEFAULT_DATABASE=db_1
READ_ONLY_MODE=false
ALLOW_DATA_MODIFICATION=true
ALLOW_DROP=false
ALLOW_TRUNCATE=false
MAX_QUERY_RESULTS=1000

# =============================================================================
# DATABASE CONFIGURATION
# Use numbered pattern: DB_TYPE_1, DB_HOST_1, etc.
# Supported types: mysql, postgresql, sqlite, supabase, planetscale, mongodb
# =============================================================================

# -----------------------------------------------------------------------------
# Database 1 - MySQL Example
# -----------------------------------------------------------------------------
DB_TYPE_1=mysql
DB_HOST_1=localhost
DB_PORT_1=3306
DB_USER_1=root
DB_PASSWORD_1=password
DB_NAME_1=myapp_dev
DB_SSL_1=false

# -----------------------------------------------------------------------------
# Database 2 - PostgreSQL Example
# -----------------------------------------------------------------------------
DB_TYPE_2=postgresql
DB_HOST_2=localhost
DB_PORT_2=5432
DB_USER_2=postgres
DB_PASSWORD_2=secret
DB_NAME_2=analytics_dev
DB_SSL_2=true
# Alternative: Use connection string
# DB_CONNECTION_STRING_2=postgresql://user:pass@localhost:5432/analytics_dev

# -----------------------------------------------------------------------------
# Database 3 - SQLite Example
# -----------------------------------------------------------------------------
DB_TYPE_3=sqlite
DB_FILE_3=./data/app.db
# Alternative: In-memory database
# DB_NAME_3=:memory:

# -----------------------------------------------------------------------------
# Database 4 - Supabase Example
# -----------------------------------------------------------------------------
DB_TYPE_4=supabase
DB_PROJECT_URL_4=https://your-project.supabase.co
DB_ANON_KEY_4=your_anon_key_here
# Optional: Service key for admin operations
# DB_SERVICE_KEY_4=your_service_key_here

# -----------------------------------------------------------------------------
# Database 5 - PlanetScale Example
# -----------------------------------------------------------------------------
DB_TYPE_5=planetscale
# Option 1: Connection string (recommended)
DB_CONNECTION_STRING_5=mysql://user:pass@host.psdb.cloud/database?ssl={"rejectUnauthorized":true}
# Option 2: Individual components
# DB_HOST_5=host.psdb.cloud
# DB_USER_5=username
# DB_PASSWORD_5=password
# DB_NAME_5=database_name
# DB_SSL_5=true

# -----------------------------------------------------------------------------
# Database 6 - MongoDB Example
# -----------------------------------------------------------------------------
DB_TYPE_6=mongodb
# Option 1: Connection string (recommended)
DB_CONNECTION_STRING_6=mongodb+srv://user:pass@cluster.mongodb.net/database
# Option 2: Individual components
# DB_HOST_6=cluster.mongodb.net
# DB_PORT_6=27017
# DB_USER_6=username
# DB_PASSWORD_6=password
# DB_NAME_6=database_name
# DB_AUTH_SOURCE_6=admin
# DB_SSL_6=true

